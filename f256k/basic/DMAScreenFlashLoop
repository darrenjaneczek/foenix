1000  for pass=0 to 1:assemble $6000,pass1020  bitmap_base_low=$00:bitmap_base=$100001021  bitmap_base_med=$001022  bitmap_base_high=$01:'"$10000"1023  bitmap_width_low=$401024  bitmap_width_high=$01:'"$0140 (320)"1025  bitmap_height_low=2401026  bitmap_height_high=0:'"(240)"1027  bitmap_size_high=$01:bitmap_size_med=$2C:bitmap_size_low=$001030  clr=$6FFF1053  vky_master_control_0=$D0001054  vky_master_control_1=$D0011055  vky_bm0_low=$D1011056  vky_bm0_ctrl=$D1001061  lda #8+4+2+1'"bitmap, graph, overlay, text"1062  sta vky_master_control_01063  lda #$01:sta vky_bm0_ctrl:'"enable bitmap with lut 0"1064  lda #bitmap_base_low:sta vky_bm0_low:'"set bitmap base location"1065  lda #bitmap_base_med:sta vky_bm0_low+11066  lda #bitmap_base_high:sta vky_bm0_low+21100  inc clr1101  dma_ctrl_start=$801102  dma_ctrl_fill=$041103  dma_ctrl_2d=$031104  dma_ctrl_enable=$011105  dma_status=$DF011106  dma_status_busy=$801107  dma_fill_val=$DF011108  dma_destination=$DF081109  dma_count=$DF0C1110  dma_ctrl=$DF001128  lda #dma_ctrl_fill+dma_ctrl_enable:'"fill scren"1129  sta dma_ctrl1130  lda clr:sta dma_fill_val:'"with clr pixels"1131  lda #bitmap_base_low:sta dma_destination1132  lda #bitmap_base_med:sta dma_destination+11133  lda #bitmap_base_high:sta dma_destination+21134  lda #bitmap_size_low:sta dma_count1135  lda #bitmap_size_med:sta dma_count+11136  lda #bitmap_size_high:sta dma_count+21137  lda dma_ctrl:'"flip the dma start"1138  ora #dma_ctrl_start:sta dma_ctrl1139  .wait_dma lda dma_status:'"wait until dma not busy"1140  and #dma_status_busy:cmp #dma_status_busy:beq wait_dma1141  nop :nop :nop :nop :nop :nop :1150  stz dma_ctrl:'"turn off dma"1990  rts 1999  next 2000  for i=1 to 1002001  print "Call ";i2002  call $60002003  next 